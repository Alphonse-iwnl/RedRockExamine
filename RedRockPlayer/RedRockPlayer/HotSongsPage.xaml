    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions >
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="LightBlue" Margin="0,0,0,-50" BorderThickness="0">
            <TextBlock Text="热门榜单" FontFamily="YouYuan" Margin="5,20,0,10" FontSize="15" Foreground="Gray"  />
        </Grid>
        <Pivot Grid.Row="1" Name="MyPivot"  >
            <PivotItem Header="欧美" Margin="10" >
                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                    <Grid>
                        <Grid.RowDefinitions >
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <Image Source="../Assets/play.png" Height="28" Width="28" Tapped="Image_Tapped"/>
                            <TextBlock Text ="全部播放" Margin="5,0,0,0" FontFamily="YouYuan" FontSize="20" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ListView Name="AmericanHotSongsList" 
                          IsItemClickEnabled="True" 
                              Grid.Row="1"  PointerPressed="HKTWHotSongsList_PointerPressed"
                      ItemClick="AmericanHotSongsList_ItemClick">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate >
                                <DataTemplate >
                                    <Grid>
                                        <Grid Margin="0,5,0,5" >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="20"/>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock 
                                    VerticalAlignment="Center"
                                    Name="SongsId" 
                                    Text="{Binding id}"
                                    Grid.Column="0"
                                    HorizontalAlignment="Center"
                                    FontFamily="Times New Roman"
                                    FontSize="15"/>
                                            <Image 
                                    Name="SongsImg" 
                                    Height="50" 
                                    Width="50" 
                                    Source="{Binding albumpic_small}" 
                                    Margin="10,0,0,0" 
                                    Grid.Column="1" />
                                            <TextBlock 
                                    FontFamily="YouYuan"
                                    VerticalAlignment="Center"
                                    Name="SongsName" Text="{Binding songname}" Tag="{Binding tag,Mode=OneWay}"
                                    RelativePanel.RightOf="SongsImg" TextTrimming="WordEllipsis"
                                    Margin="10,0,0,0" HorizontalAlignment="Left" FontSize="15"
                                    Grid.Column="2"/>
                                            <StackPanel  Orientation="Horizontal"  Visibility="{Binding ElementName=SongsName,Path=Tag,Mode=TwoWay}" Grid.Column="4" Margin="10">
                                                <Button Name="downloadButton" 
                                                    Click="downloadButton_Click" 
                                                    HorizontalAlignment="Right"
                                                    RelativePanel.LeftOf="SingerName"                                                     
                                                    Background="White"                                                     
                                                    Content="&#xE0A5;"
                                                    FontFamily="Segoe MDL2 Assets"/>
                                                <Button 
                                                    Name="playButton" 
                                                    Click="playButton_Click" 
                                                    RelativePanel.LeftOf="SingerName" 
                                                    HorizontalAlignment="Right" 
                                                    Background="White" 
                                                    Content="&#xE710;"                                                   
                                                    FontFamily="Segoe MDL2 Assets"/>
                                            </StackPanel>
                                            <TextBlock 
                                    FontFamily="YouYuan"
                                    Name="SingerName" 
                                    TextTrimming="WordEllipsis"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Text="{Binding singername}" 
                                    RelativePanel.RightOf="SongsName" 
                                    Margin="0,0,10,0"
                                    Grid.Column="3"/>
                                        </Grid>
                                        <Line X1="0" X2="750" Y1="0" Y2="1" Height="1" VerticalAlignment="Bottom" Stroke="#E6E6E6" StrokeThickness="1"></Line>
                                        <Line X1="0" X2="750" Y1="1" Y2="0" Height="1" VerticalAlignment="Bottom" Stroke="#E6E6E6" StrokeThickness="1"></Line>
